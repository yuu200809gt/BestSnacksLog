<header>
  <div class="header_container">
    <div class="header_left">
      <h2 class="main_title"><%= link_to "BEST SNACKS LOG", root_path, class: "page_title" %></h2>
        <div class="account_button">
            <% if user_signed_in? %>
            <% if current_user.avatar.attached? %>
            <li><%= image_tag current_user.avatar , class: "avatar_icon" %></li>
            <% else %>
            <li><%= image_tag "default_icon", class: "avatar_icon" %></li>
            <% end %>
            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <%= current_user.name %>
            </button>
            <ul class="dropdown-menu">
            <li><%= link_to "投稿一覧", my_snacks_path, class: "drop_login" %></li>
            <li><%= link_to "アカウント設定", edit_user_registration_path, class: "drop_login" %></li>
            <li><hr class="dropdown-divider"></li>
            <li><%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "drop_login" %></li>
            </ul>
            <% else %>
            <li><%= link_to "ゲストログイン", users_guest_sign_in_path, data: { turbo_method: :post }, class: "user_list" %></li>
            <li><%= link_to "ログイン", new_user_session_path, class: "user_list Login" %></li>
            <li><%= link_to "新規登録", new_user_registration_path, class: "user_list New" %></li>
            <% end %>
        </div>
    </div>   
  </div>    
</header>
