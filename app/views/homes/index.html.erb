<div class="top_container">
  <p class="top_title">BEST SNACKS LOG</p>
    <p class="sub_title"><strong>-お酒の相棒、きっと見つかる-</strong></p>
    <div class="index_search">
    <%= form_with url: snacks_path, method: :get, local: true do |f| %>
      <%= f.text_field :keyword, placeholder: "キーワードを入力", class: "index_search_form home_search search_form" %><%= f.submit "検索", class: "index_search_form home_search search_button" %>
    <% end %>
    </div>
</div>
<p class="latest_post_text">最新投稿</p>
<div class="snack_container">
<ul class="snack_list">
  <% @snacks.each do |snack| %>
  <li class="Snack">
  <div class="snack_detail">
    <% if snack.food.attached? %>
    <%= image_tag snack.food.variant(:index_size), alt: "おつまみ画像" %>
    <% else %>
    <%= image_tag "food.png", alt: "おつまみ画像", class: "snack_img" %>
    <% end %>
    <h5 class="snack_name"><%= snack.name %></h5>
    <p class="snack_alcohol"><strong>合うお酒：</strong><%= snack.best_alcohol %></p>
    <p class="snack_types"><strong>食べ物のカテゴリ：</strong><%= snack.food_types %></p>
    <p class="snack_memo"><strong>メモ：</strong><%= snack.memo %></p>
    <p><%= link_to "詳細はこちら", snack, class: "btn btn-dark btn_position" %></p>
  </div>
  </li>
  <% end %> 
</ul>
</div>
