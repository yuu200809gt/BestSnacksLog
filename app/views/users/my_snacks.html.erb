<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "snacks_index", "data-turbo-track": "reload" %>
<% end %>
<p class="my_snack_title">投稿済みおつまみ</p>
<div class="my_snack_container">
  <p class="total_snack"><strong><%= @snacks.count %></strong> 件が見つかりました。</p>
  <ul class="snack_list">
    <% @snacks.each do |snack| %>
    <li class="Snack">
    <div class="snack_detail">
      <% if snack.food.attached? %>
      <%= image_tag snack.food.variant(:index_size), alt: "おつまみ画像" %>
      <% else %>
      <%= image_tag "food.png", alt: "おつまみ画像", class: "snack_img" %>
      <% end %>
      <h5 class="snack_name"><%= snack.name %></h5>
      <p class="snack_alcohol">合うお酒：<%= snack.best_alcohol %></p>
      <p class="snack_types">食べ物のカテゴリ：<%= snack.food_types %></p>
      <p class="snack_memo">メモ：<%= snack.memo %></p>
      <p><%= link_to "詳細はこちら", snack, class: "btn btn-dark" %></p>
    </div>
    </li>
    <% end %> 
  </ul>
</div>